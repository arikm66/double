# Server Environment Variables

# MongoDB Connection
MONGODB_URI=your_mongodb_connection_string

# JWT Secret Key
JWT_SECRET=your_jwt_secret_key

# Server Port
PORT=5000

# Firebase Storage Bucket
# Example: your-project-id.appspot.com
FIREBASE_STORAGE_BUCKET=your-firebase-storage-bucket

# Firebase Service Account (JSON)
# This should be the entire JSON content from your Firebase service account key file
# To generate: Firebase Console > Project Settings > Service Accounts > Generate New Private Key
# Replace newlines with \n and paste the entire JSON as a single line
# Example format (all on one line):
# {"type":"service_account","project_id":"your-project","private_key_id":"...","private_key":"-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n","client_email":"...","client_id":"...","auth_uri":"...","token_uri":"...","auth_provider_x509_cert_url":"...","client_x509_cert_url":"..."}
FIREBASE_SERVICE_ACCOUNT={"type":"service_account","project_id":"..."}
